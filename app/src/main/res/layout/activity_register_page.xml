<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.register_page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgregisterlay"
                android:src="@drawable/barcode"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/fullnameregister"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgregisterlay"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:hint="Enter Full Name"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:inputType="textCapWords"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fullnameregister"
                android:id="@+id/idregister"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:hint="Enter GCEK ID"
                android:textSize="18sp"
                android:inputType="number"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idregister"
                android:id="@+id/phoneregister"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:hint="Enter Phone NO"
                android:textSize="18sp"
                android:inputType="phone"
                android:maxLength="10"/>
            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phoneregister"
                android:textSize="18sp"
                android:id="@+id/registerspinner"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                />
            <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registerspinner"
            android:textSize="18sp"
            android:id="@+id/passoutregister"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            />
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passoutregister"
                android:id="@+id/emailregister"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:hint="Enter Phone NO"
                android:textSize="18sp"
                android:inputType="textEmailAddress"
                />


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailregister"
                android:id="@+id/passwordregister"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:hint="Password"
                android:textSize="18sp"
                android:inputType="textEmailAddress"
                />
            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Send Verification Mail"
                android:layout_marginTop="20dp"
                android:layout_below="@id/passwordregister"
                />

        </RelativeLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>