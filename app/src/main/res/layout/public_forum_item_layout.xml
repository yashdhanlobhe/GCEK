<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="15dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/uparrowimagepublicforum"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_arrow_drop_up_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            android:id="@+id/numberofupvotescardviewpublicforum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            app:layout_constraintEnd_toEndOf="@+id/uparrowimagepublicforum"
            app:layout_constraintStart_toStartOf="@+id/uparrowimagepublicforum"
            app:layout_constraintTop_toBottomOf="@+id/uparrowimagepublicforum" />

        <TextView
            android:layout_marginHorizontal="5dp"
            android:id="@+id/publicForumfromInCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="From"
            app:layout_constraintStart_toEndOf="@+id/uparrowimagepublicforum"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TitleCardviewPublicForum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="From"
            android:textColor="@color/s1"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/publicForumfromInCardView"
            app:layout_constraintTop_toBottomOf="@+id/publicForumfromInCardView" />

        <TextView
            android:id="@+id/publicForumDescriptionInCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="Description"
            app:layout_constraintStart_toStartOf="@+id/TitleCardviewPublicForum"
            app:layout_constraintTop_toBottomOf="@+id/TitleCardviewPublicForum" />

        <TextView
            android:id="@+id/publicForumReplyInCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="No Reply Yet"
            android:textColor="@color/s1"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/publicForumDescriptionInCardView"
            app:layout_constraintTop_toBottomOf="@+id/publicForumDescriptionInCardView" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="tag:  "
            app:layout_constraintStart_toStartOf="@+id/publicForumReplyInCardView"
            app:layout_constraintTop_toBottomOf="@+id/publicForumReplyInCardView" />

        <TextView
            android:id="@+id/publicforumtagtextview"
            android:layout_marginVertical="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YD"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/publicForumReplyInCardView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>