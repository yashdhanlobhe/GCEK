<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gcekhost">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.c2dm.permission.SEND" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/gcek_host_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/gcek_host_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GCEK">
        <activity android:name=".functions.SendPrivateNotifiaction"></activity>
        <activity android:name=".functions.DeleteUser" />
        <activity android:name=".Notification.AddPosterHomeTab" />

        <service android:name=".serviceNotifiaciton.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".serviceNotifiaciton.MyFirebaseMessagingService"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>

        <activity android:name=".Notification.Notification" />
        <activity android:name=".login.Register_page" />
        <activity android:name=".login.Login_page">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Notification.AddNotification" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>