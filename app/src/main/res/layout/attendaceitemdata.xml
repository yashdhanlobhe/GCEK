<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="10dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/s1"
            android:textSize="20sp"
            android:id="@+id/coursenameattendace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="course name"
            app:layout_constraintStart_toStartOf="@+id/courseattendance"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/courseattendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coursenameattendace"
            android:layout_marginVertical="5dp"
            android:text="Attended:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coursenameattendace" />

        <TextView
            android:id="@+id/courseattendedtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coursenameattendace"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="5dp"
            android:text="10"
            app:layout_constraintStart_toEndOf="@+id/courseattendance"
            app:layout_constraintTop_toBottomOf="@+id/coursenameattendace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coursenameattendace"
            android:layout_marginVertical="5dp"
            android:text="Total:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/courseattendance" />

        <TextView
            android:id="@+id/totalattendedtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coursenameattendace"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="5dp"
            android:text="20"
            app:layout_constraintStart_toEndOf="@+id/courseattendance"
            app:layout_constraintTop_toBottomOf="@+id/courseattendedtextview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:id="@+id/attendacepersentagetextview"
            android:textStyle="bold"
            android:textSize="32dp"
            android:textColor="@color/s1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>